rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // REGOLE DI DEBUG TEMPORANEE:
    // Consente a qualsiasi utente autenticato di leggere e scrivere in qualsiasi
    // documento del database. Questo Ã¨ insicuro per la produzione ma
    // necessario per diagnosticare un problema di permessi persistente.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}