
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // REGOLE DI SVILUPPO TEMPORANEE
    // Queste regole permettono a qualsiasi utente autenticato di leggere e scrivere
    // in qualsiasi punto del database. Sono utili per sbloccare lo sviluppo,
    // ma DEVONO essere sostituite con regole pi√π restrittive prima del rilascio.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
